{
  "name": "novice",
  "version": "0.0.0",
  "description": "machine code simulator",
  "main": "index.js",
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json -t verbose 'novice/**/*.ts'",
    "lint:fix": "tslint --fix -p tsconfig.json -c tslint.json -t verbose 'novice/**/*.ts'",
    "novice": "node novice/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zucchini/novice.git"
  },
  "author": "austin adams <git@austinjadams.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zucchini/novice/issues"
  },
  "homepage": "https://github.com/zucchini/novice#readme",
  "bin": {
    "novice": "novice/main.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/helpers\\.(test|spec)\\.(jsx?|tsx?)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  },
  "devDependencies": {
    "@types/argparse": "^1.0.35",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "argparse": "^1.0.10"
  }
}
